<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".RegisterNewUserActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:paddingEnd="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registerTitle"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/newAccount_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_add_picture" />

        <TextView
            android:id="@+id/textView_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/firstnameTitle"
            android:textColor="@color/Theme_color_green"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_yellow_text_input_background"
            android:ems="10"
            android:hint=" Jack"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            />

        <TextView
            android:id="@+id/textView_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/lastnameTitle"
            android:textColor="@color/Theme_color_green"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_yellow_text_input_background"
            android:ems="10"
            android:hint=" Sparrow"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textView_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Phone number"
            android:textColor="@color/Theme_color_green"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_yellow_text_input_background"
            android:ems="10"
            android:hint=" +xx xx xxxx xxx"
            android:inputType="phone"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Address"
            android:textColor="@color/Theme_color_green"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_yellow_text_input_background"
            android:ems="10"
            android:hint="No.1/A, Road, City."
            android:inputType="textPostalAddress"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/register_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/Theme_color_green"
            android:text="Register new user"
            android:textAllCaps="false" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/newAccount_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>