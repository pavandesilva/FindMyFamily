<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".SearchPeopleActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/SearchPeople_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Add Family Members"
        android:textSize="30sp"
        android:textColor="@color/Theme_color_green"
        />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBar"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_yellow_text_input_background"
        app:queryHint="Search with email"
        android:autofillHints="emailAddress"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/usersList"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        >-->

<!--    </androidx.recyclerview.widget.RecyclerView>-->
<Button
    android:id="@+id/addButton"
    android:layout_marginHorizontal="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add Family member"
    android:backgroundTint="@color/Theme_color_green"
/>
  </LinearLayout>

